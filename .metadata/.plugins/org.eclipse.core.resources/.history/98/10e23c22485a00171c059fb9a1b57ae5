package com.study.Spring.test;

import org.junit.Test;
import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import com.study.Spring.bean.Student;

public class In3LifeSpringTest {
	@Test
	public void myTest(){
		System.out.println("我是一个junit测试文件");
		
		//-----------------------静态工厂---------------
		System.out.println("-----------------------静态工厂---------------");
		ClassPathXmlApplicationContext acs = new ClassPathXmlApplicationContext
				("com/study/Spring/config/LifeStaticFactoryApplicationContext.xml");
		System.out.println("直接单例模式1" +acs.getBean("stuSign"));
		System.out.println("直接单例模式2" +acs.getBean("stuSign"));
		
		Student stuAcs = acs.getBean("stuSignInitDestroy", LifeStaticStudentProxy.class);
		System.out.println("student name:" + stuAcs.getName());
		System.out.println("student age:" + stuAcs.getAge());
		acs.close();
	}
}
